{
  "name": "termite",
  "version": "1.0.2",
  "description": "Electron terminal emulator",
  "main": "src/index.js",
  "author": "andrea@parro.it",
  "license": "mit",
  "dependencies": {
    "electron-debug": "^0.2.1",
    "electron-window": "^0.6.0",
    "is-electron-renderer": "^2.0.0",
    "json5": "^0.4.0",
    "node-uuid": "^1.4.3",
    "pty.js": "^0.3.0"
  },
  "scripts": {
    "start": "electron .",
    "test": "test-collider",
    "collider": "collider",
    "debug": "debug",
    "cover": "cover-collider",
    "watch": "watch-collider",
    "release-minor": "release-minor",
    "release-patch": "release-patch",
    "lint": "lint",
    "prepublish": "lint",
    "deb": "rm -rf app && cp -r dist/termite-linux-x64 app && node-deb -u termite -g termite -v 1.0.1 app",
    "pkg": "electron-packager . termite --platform=linux --arch=x64 --out=dist --overwrite --version=0.33.4 --ignore='dist|media|libapss|.*\\.deb'"

  },
  "eslintConfig": {
    "extends": "devenv"
  },
  "babel": {
    "stage": 4
  },
  "node_deb": {
    "start_script": "app/termite"
  },
  "devDependencies": {
    "electron-builder": "^2.0.0",
    "electron-packager": "^5.1.0",
    "electron-rebuild": "^1.0.0",
    "esenv": "^1.1.0",
    "node-deb": "^0.1.3",
    "rum-node": "^1.12.1"
  }
}
